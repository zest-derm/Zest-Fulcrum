generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  PROVIDER
}

enum DrugClass {
  TNF_INHIBITOR
  IL17_INHIBITOR
  IL23_INHIBITOR
  IL4_13_INHIBITOR
  IL12_23_INHIBITOR
  JAK_INHIBITOR
  OTHER
}

enum DiagnosisType {
  PSORIASIS
  ECZEMA
  HIDRADENITIS_SUPPURATIVA
  OTHER
}

enum SeverityScoreType {
  PASI
  EASI
  IGA
  PGA
}

enum StabilityStatus {
  STABLE
  UNSTABLE
}

enum FormularyStatus {
  OPTIMAL
  SUBOPTIMAL
  NON_FORMULARY
}

enum ProviderDecision {
  ACCEPTED
  REJECTED
  MODIFIED
  PENDING
}

enum OutcomeStatus {
  IMPROVED
  MAINTAINED
  WORSENED
}

enum KnowledgeDocumentType {
  GUIDELINE
  FORMULARY
  EVIDENCE
  COST_DATA
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  npi       String?
  role      UserRole @default(PROVIDER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  assessments ClinicalAssessment[] @relation("AssessmentUser")
  decisions    Recommendation[]     @relation("RecommendationDecider")
}

model InsurancePlan {
  id               String          @id @default(cuid())
  planName         String
  payerName        String
  effectiveDate    DateTime?
  formularyVersion String?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  patients       Patient[]
  formularyDrugs FormularyDrug[]
}

model Patient {
  id             String             @id @default(cuid())
  externalId     String?            @unique
  firstName      String
  lastName       String
  dateOfBirth    DateTime
  insurancePlanId String
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  insurancePlan     InsurancePlan @relation(fields: [insurancePlanId], references: [id])
  currentMedication CurrentMedication?
  claimsHistory     ClaimsHistory[]
  pharmacyClaims    PharmacyClaim[]
  assessments       ClinicalAssessment[]
  recommendations   Recommendation[]
}

model FormularyDrug {
  id                  String     @id @default(cuid())
  planId              String
  drugName            String
  genericName         String
  drugClass           DrugClass
  tier                Int
  requiresPA          Boolean   @default(false)
  stepTherapyRequired Boolean   @default(false)
  annualCostWAC       Decimal?  @db.Decimal(12, 2)
  memberCopayT1       Decimal?  @db.Decimal(10, 2)
  memberCopayT2       Decimal?  @db.Decimal(10, 2)
  memberCopayT3       Decimal?  @db.Decimal(10, 2)
  biosimilarOf        String?
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt

  plan InsurancePlan @relation(fields: [planId], references: [id])

  @@index([planId, drugName])
}

model PharmacyClaim {
  id          String    @id @default(cuid())
  patientId   String
  drugName    String
  ndcCode     String?
  fillDate    DateTime
  daysSupply  Int
  quantity    Int
  outOfPocket Decimal?  @db.Decimal(10, 2)
  planPaid    Decimal?  @db.Decimal(12, 2)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  patient Patient @relation(fields: [patientId], references: [id])

  @@index([patientId, drugName])
}

model CurrentMedication {
  id            String    @id @default(cuid())
  patientId     String    @unique
  drugName      String
  dose          String
  frequency     String
  route         String
  startDate     DateTime
  lastFillDate  DateTime?
  adherencePDC  Decimal?  @db.Decimal(5, 2)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  patient Patient @relation(fields: [patientId], references: [id])
}

model ClaimsHistory {
  id                 String   @id @default(cuid())
  patientId          String
  drugName           String
  startDate          DateTime
  endDate            DateTime?
  reasonDiscontinued String?
  createdAt          DateTime @default(now())

  patient Patient @relation(fields: [patientId], references: [id])
}

model ClinicalAssessment {
  id                     String           @id @default(cuid())
  patientId              String
  assessedBy             String
  assessmentDate         DateTime
  diagnosis              DiagnosisType
  severityScoreType      SeverityScoreType
  severityScore          Decimal @db.Decimal(6, 2)
  severityDurationMonths Int
  dlqiScore              Int
  adverseEvents          String?
  comorbidities          String?
  providerNotes          String?
  createdAt              DateTime @default(now())

  patient Patient @relation(fields: [patientId], references: [id])
  assessor User    @relation("AssessmentUser", fields: [assessedBy], references: [id])
  recommendations Recommendation[]
  followupFor  Recommendation[] @relation("RecommendationFollowup")
}

enum RecommendationStabilityStatus {
  STABLE
  UNSTABLE
}

enum RecommendationFormularyStatus {
  OPTIMAL
  SUBOPTIMAL
  NON_FORMULARY
}

enum RecommendationOutcomeStatus {
  IMPROVED
  MAINTAINED
  WORSENED
}

model Recommendation {
  id                      String                          @id @default(cuid())
  patientId               String
  assessmentId            String
  generatedAt             DateTime                        @default(now())
  llmModel                String
  stabilityStatus         RecommendationStabilityStatus
  formularyStatus         RecommendationFormularyStatus
  quadrant                String
  recommendationsJson     Json
  providerDecision        ProviderDecision                @default(PENDING)
  acceptedRecommendationIndex Int?
  rejectionReason         String?
  decidedAt               DateTime?
  decidedBy               String?
  followupAssessmentId    String?
  outcomeStatus           RecommendationOutcomeStatus?
  createdAt               DateTime                        @default(now())
  updatedAt               DateTime                        @updatedAt

  patient      Patient            @relation(fields: [patientId], references: [id])
  assessment   ClinicalAssessment @relation(fields: [assessmentId], references: [id])
  decider      User?              @relation("RecommendationDecider", fields: [decidedBy], references: [id])
  followup     ClinicalAssessment? @relation("RecommendationFollowup", fields: [followupAssessmentId], references: [id])
  feedback     RecommendationFeedback?
}

model RecommendationFeedback {
  id                String          @id @default(cuid())
  recommendationId  String          @unique
  reasons           Json
  createdAt         DateTime        @default(now())

  recommendation Recommendation @relation(fields: [recommendationId], references: [id])
}

model KnowledgeDocument {
  id              String                 @id @default(cuid())
  docType         KnowledgeDocumentType
  title           String
  content         String
  sourceUrl       String?
  publicationDate DateTime?
  embedding       Unsupported("vector")?
  metadata        Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
